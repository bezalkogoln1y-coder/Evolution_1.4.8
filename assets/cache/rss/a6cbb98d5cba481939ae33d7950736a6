<span class="pl-s1">  <span class="pl-smi">$chunk</span> <span class="pl-k">=</span> <span class="pl-s"><span class="pl-pds">'</span>{{ $data["param1"] }}<span class="pl-pds">'</span></span>;</span>
<span class="pl-s1">  <span class="pl-smi">$chunk</span> <span class="pl-k">.=</span> <span class="pl-s"><span class="pl-pds">'</span>{!! $data["param1"] !!}<span class="pl-pds">'</span></span>;</span>
<span class="pl-s1"></span><span class="pl-pse"><span class="pl-s1">?</span>&gt;</span>

{{ $modx-&gt;tpl-&gt;parseChunk('@B_CODE:'.$chunk, ['param1' =&gt; 'value with "quote"']) }}
{{ time() }}

//Doclister with inline BLADE template
{!! $modx-&gt;runSnippet('DocLister',['parents' =&gt; '0', 'tpl' =&gt; '@B_CODE:{{ $data["pagetitle"] }}&lt;<span class="pl-ent">br</span> /&gt;']) !!}

//DocLister with BLADE template from file (/views/partials/doc-tpl.blade.php)
{!! $modx-&gt;runSnippet('DocLister',[
  'parents' =&gt; '2', 
